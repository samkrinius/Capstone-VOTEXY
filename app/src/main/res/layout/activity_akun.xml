<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appPage.AkunActivity"
    android:background="@drawable/bgtes">

    <ImageView
        android:id="@+id/back_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="39dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/tv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="127dp"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:text="Profil"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:layout_constraintStart_toEndOf="@+id/back_akun"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_profile"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/bluebg"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="520dp">

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="120dp"
                android:layout_marginEnd="120dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/ikon_grup" />

            <TextView
                android:id="@+id/tv_biodata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_profile"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:text="Biodata User"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_nama_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_biodata"
                android:drawableStart="@drawable/ic_pp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:textSize="16dp"
                android:text="VotexFams" />

            <TextView
                android:id="@+id/tv_nim_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nama_profile"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_nimm"
                android:text="202312345"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_email_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_email"
                android:layout_below="@+id/tv_nim_profile"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="votexy@gmail.com"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_pw_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_lock"
                android:layout_below="@+id/tv_email_profile"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:textSize="16dp"
                android:text="admin123" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>